<%= render :partial => 'spree/admin/shared/product_sub_menu' %>
<%= render :partial => 'spree/admin/shared/product_tabs', :locals => {:current => "Digital Versions"} %>

<% if @product.has_variants? %>

  <% for variant in @product.variants do %>
    <%= render 'form', :variant => variant %>
	<%= render 'sample_form', :variant => variant %>
  <% end %>

<% else %>
  This product has no variants.<br/><br/>

  <% if @product.master.digital? %>
    <strong>A digital version of this product currently exists:</strong>
    
  <% end %>

  <%= render 'form', :variant => @product.master %>

  

  <% if @product.master.digital_sample? %>
    <strong>This product has Free Samples:</strong>
   
  <% end %>

  
  <%= render 'sample_form', :variant => @product.master %>

<% end %>